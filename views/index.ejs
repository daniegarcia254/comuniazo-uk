<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Puntos | Comunio UK</title>

    <!-- jQuery and AngularJS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular-animate.min.js"></script>
    <script src="http://code.angularjs.org/1.2.16/angular-resource.js"></script>
    <script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.0.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/fonts/font-awesome-4.4.0/css/font-awesome.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/main.css" type="text/css" media="screen">


    <!-- My app's js files -->
    <script type="text/javascript" src="/lib/jquery.tablesorter.min.js"></script>
    <script type="text/javascript" src="/js/angularApp.js"></script>
    <script type="text/javascript" src="/js/services/comunioService.js"></script>
    <script type="text/javascript" src="/js/controllers/mainCtrl.js"></script>
    <script type="text/javascript" src="/js/controllers/matchTableCtrl.js"></script>
    <script type="text/javascript" src="/js/directives/matchTable.js"></script>
    <script type="text/javascript" src="/js/constants.js"></script>


</head>
<body ng-app="comunioUKApp">
    <!-- HEADER  -->
    <div class="header group">
        <div class="wrapper"><a class="logo" href=""><img alt="Header" src="img/header.png"/></a>
            <div class="left">
                <ul class="nav">
                    <li><a href="http://www.comuniazo.com/comunio/puntos"><i class="fa fa-trophy"></i>Puntos</a></li>
                    <li><a href="http://www.comuniazo.com/comunio/dinero"><i class="fa fa-eur"></i>Dinero</a></li>
                    <li>
                        <a href="http://www.comuniazo.com/comunio/jugadores"><i class="fa fa-users"></i>Jugadores <span style="margin-top: -1px">▾</span></a>
                        <ul class="sub">
                            <li><a href="http://www.comuniazo.com/comunio/equipos/athletic"><i class="spr-athletic"></i>Athletic</a></li>
                            <li><a href="http://www.comuniazo.com/comunio/equipos/athletic"><i class="spr-athletic"></i>Athletic</a></li>
                        </ul>
                    </li>
                    <li><a href="http://www.comuniazo.com/comunio/onceideal"><i class="fa fa-star"></i>Once ideal</a></li>
                </ul>
                <div class="buscador">
                    <form id="search" name="search" method="post" action="" onsubmit="return false">
                        <input name="s" type="text" id="s" autocomplete="off" placeholder="Buscar jugador...">
                        <i class="fa fa-search"></i>
                        <div id="results"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- MAIN WRAPPER  -->
    <div class="wrapper group" ng-controller="mainCtrl">
        <div class="content" style="position: relative">
            <div class="submenu">
                <div class="sub-calc">
                    <input class="caja" ng-model="user" type="text" name="user" id="user" placeholder="Usuario de Comunio">
                    <button class="btn" type="submit" id="calcularBtn" ng-click="calcularPuntos()">¡Calcular!</button>
                </div>
            </div>
            <div id="user-empty-error">
                <span>Por favor, introduzca un nombre de usuario.</span>
            </div>
            <div id="calculo"></div>
            <div class="boxes-2">
                <match-table></match-table>
            </div>
        </div>
    </div>

    <!-- FOOTER  -->
    <div class="footer">
        <div class="wrapper">
            <ul class="info">
                <li>Daniel García Páez</li>
            </ul>
        </div>
    </div>
</body>
</html>